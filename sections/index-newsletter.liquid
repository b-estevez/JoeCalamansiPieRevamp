<div class="text-green-950 flex mx-10 flex-col gap-3 items-center bg-yellow-300 rounded-2xl rounded-tl-[60px] rounded-br-[60px] p-15">
    <h2 class="font-poppins text-2xl font-bold">Get a Taste of Fresh Updates!</h2>
    <p>Be the first to know about our newest treats, exclusive discounts, and sweet surprises straight to your inbox.</p>
    {%- form 'customer' -%}
    <div class="relative mt-5">
        <input type="email" id="email" name="contact[email]" value="{{ form.email }}" class="bg-white text-green-950/70 border-1 border-gray-300 rounded-md p-3 text-sm font-inter sm:w-[400px]"  placeholder="Enter your Email" required>
        <button style="background-image: url('{{ 'newsletter-arrow-submit.png' | file_img_url }}')" class="absolute cursor-pointer top-[50%] -translate-y-[50%] bg-center bg-no-repeat right-2 w-10 h-10" type="submit"> </button>
    </div>

         <div id="subscribe_toast" class="toast toast-center z-3 bottom-25">
                <div class="alert alert-success border-none">
                    <span>Subscribe successfully.</span>
                </div>
            </div>

         {% if form.posted_successfully? %}
           <div id="subscribe_toast" class="toast toast-left z-3 bottom-25">
                <div class="alert alert-success border-none">
                    <span>Subscribe successfully.</span>
                </div>
            </div>
        {% endif %}

        {% if form.errors %}
            <div id="subscribe_toast" class="toast toast-center z-3 bottom-25">
                <div class="alert alert-warning border-none">
                    <span> {{ form.errors | default_errors }} </span>
                </div>
            </div>
           
            
        {% endif %}
        
    {%- endform -%}
</div>


{% schema %}
    {
        "name": "newsletter",
        "tag": "section",
        "class": "bg-white py-40 flex justify-center"
    }
{% endschema %}